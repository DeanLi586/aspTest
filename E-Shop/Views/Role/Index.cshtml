@model IEnumerable<Microsoft.AspNet.Identity.EntityFramework.IdentityRole>
@{
    ViewBag.Title = "Roles";
}
<h2>Roles</h2>

<table class="sidebar table col-md-10">
        @foreach(var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Name)</td>   
                <td>
                    <div class="btn btn-primary">
                        <span><i class="glyphicon glyphicon-edit" aria-hidden="true"></i></span>
                        @Html.ActionLink("Edit", "Edit", new {id = item.Id })
                    </div>
                    <div class="btn btn-info">
                        <span><i class="glyphicon glyphicon-info-sign" aria-hidden="true"></i></span>
                        @Html.ActionLink("Details", "Details", new { id = item.Id })
                    </div>
                    <div class="btn btn-danger">
                        <span><i class="glyphicon glyphicon-trash" aria-hidden="true"></i></span>
                        @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                    </div>
                </td>
            </tr>
        }
</table>

<div class="btn btn-primary">
    <span><i class="glyphicon glyphicon-info-sign" aria-hidden="true"></i></span>
    @Html.ActionLink("Create New Role", "Create")
</div>