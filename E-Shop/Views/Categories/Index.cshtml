@model IEnumerable<E_Shop.Models.Category>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

@if (User.Identity.IsAuthenticated)
{
    if (User.IsInRole("Manager"))
    {
        <div class="btn btn-primary">
            <span><i class="glyphicon glyphicon-circle-arrow-left" aria-hidden="true"></i></span>
            @Html.ActionLink("Create New", "Create")
        </div>
    }
}

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CategoryName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CategoryDescription)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.CategoryName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CategoryDescription)
        </td>
        @if (User.Identity.IsAuthenticated)
        {
            if (User.IsInRole("Manager"))
            {
                <td>
                    <div class="btn btn-default">
                        <span><i class="glyphicon glyphicon-edit"</span>
                        @Html.ActionLink("Edit", "Edit", new { id = item.CategoryId })
                    </div>
                    <div class="btn btn-info">
                        <span><i class="glyphicon glyphicon-info-sign" aria-hidden="true"></i></span>
                        @Html.ActionLink("Details", "Details", new { id = item.CategoryId })
                    </div>
                    <div class="btn btn-danger">
                        <span><i class="glyphicon glyphicon-trash" aria-hidden="true"></i></span>
                        @Html.ActionLink("Delete", "Delete", new { id = item.CategoryId })
                    </div>
                </td>
            }
        }
    </tr>
}

</table>
